//  primer triangulo

#include <stdio.h>
#include <iostream>
int main(){
    int a, i ,j;
    printf("digite un valor numerico entero \n");
    scanf("%d",&a);
    for(i=0;i<a;i++){
                 for(j=0;j<=i;j++){
                          printf("*");
                                   }
                             printf("\n");
                 }
                     system("PAUSE");
    }

	int i,a,j,num=6;
 printf("digite un valor numerico entero \n");
	scanf("%d",&a);
	for( i=0;i<6;i++)
	{
		printf("");
     	for(j=0;j<num;j++)
		{
			printf("*");
		}
	printf("\n");
	num--;
}



// segundo triangulo

#include<conio.h>
#include<stdio.h>

int main()
{
	int i,a,j,num=6;
 printf("digite un valor numerico entero \n");
	scanf("%d",&a);
	for( i=0;i<6;i++)
	{
		printf("");
     	for(j=0;j<num;j++)
		{
			printf("*");
		}
	printf("\n");
	num--;
   }
   
	getch();
	return(0);
   //}
}


// tercer triangulo
#include <stdio.h>
#include<iostream>

int main(){
    int a,n;
    printf("digite un valor numerico entero \n");
    scanf("%d",&a);
    for(int i=0;i<a;i++){
            for(int j=i;j<a;j++){
                    printf(" "); 
                    }
                    n=i;
                    while(n>=0){
                                printf("*");
                                n--;
                                }
                                printf("\n");
                    }
    } 





